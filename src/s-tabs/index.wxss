.container {
  display: flex;
  margin-bottom: 10px;
  background: #fff;
}

.title {
  display: flex;
  flex: 1;
  justify-content: center;
  font-size: 14px;
  padding: 12px 0;
  position: relative;
}

.title .active::after {
  content: "";
  width: 25%;
  height: 4px;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  background: red;
  border-radius: 4px;
}